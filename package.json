{
    "name": "adventure",
    "version": "0.0.1",
    "description": "adventure",
    "main": "public/",
    "author": "Ghilea",
    "config": {
        "address": "./src/",
        "output": "./public"
    },
    "dependencies": {
        "use-sound": "4.0.1"
    },
    "devDependencies": {
        "mysql": "2.18.1",
        "express": "4.17.3",
        "sass": "^1.49.9",
        "npm-run-all": "^4.1.5",
        "nodemon": "^2.0.15",
        "copyfiles": "^2.4.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "axios": "0.26.1",
        "@babel/cli": "^7.17.6",
        "@babel/core": "^7.17.5",
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-react": "^7.16.7",
        "babel-loader": "^8.2.3",
        "webpack": "^5.70.0",
        "webpack-cli": "^4.9.2",
        "mobx": "6.5.0",
        "mobx-react": "7.3.0",
        "cors": "2.8.5",
        "dotenv": "^16.0.0",
        "regenerator-runtime": "0.13.9",
        "body-parser": "1.20.0"
    },
    "scripts": {
        "start": "nodemon src/server/nodeServer.js",
        "watch": "nodemon --exec \"npm run build\"",
        "build:sass": "sass --no-source-map %npm_package_config_address%sass:%npm_package_config_output%/css",
        "copy:assets": "copyfiles -u 1 %npm_package_config_address%assets/**/* %npm_package_config_output%",
        "copy:index": "copyfiles -u 1 %npm_package_config_address%index.html %npm_package_config_output%",
        "copy": "npm-run-all --parallel copy:*",
        "webpack": "webpack",
        "build": "npm-run-all webpack copy build:* start"
    },
    "nodemonConfig": {
        "watch": [
            "./src/*"
        ],
        "ext": "js,scss,html,jsx",
        "ignore": [
            "public/*"
        ],
        "delay": 2500
    }
}
