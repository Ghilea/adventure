{
    "name": "adventure",
    "version": "0.0.1",
    "description": "adventure",
    "main": "public/",
    "author": "Ghilea",
    "config": {
        "clientAddress": "./src/client/",
        "output": "./public",
        "editorAddress": "./src/editor/"
    },
    "dependencies": {
        "howler": "2.2.3",
        "use-sound": "4.0.1",
        "rooks": "5.11.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "three": "0.141.0",
        "@react-three/fiber": "8.0.24",
        "@react-three/drei": "9.13.0",
        "@react-three/cannon": "6.3.0",
        "@react-three/postprocessing": "2.4.2",
        "zustand": "4.0.0-rc.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.17.10",
        "@babel/core": "^7.18.5",
        "@babel/preset-env": "^7.18.2",
        "@babel/preset-react": "^7.17.12",
        "@babel/plugin-transform-runtime": "^7.18.5",
        "babel-loader": "^8.2.5",
        "body-parser": "1.20.0",
        "copyfiles": "^2.4.1",
        "cors": "2.8.5",
        "dotenv": "^16.0.1",
        "express": "4.18.1",
        "mysql": "2.18.1",
        "nodemon": "^2.0.16",
        "npm-run-all": "^4.1.5",
        "sass": "^1.52.3",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.10.0",
        "ws": "^8.8.0",
        "pkg": "5.7.0",
        "gltf-pipeline": "3.0.4",
        "react-full-screen": "1.1.1",
        "three-stdlib": "2.10.2",
        "mocha": "10.0.0",
        "chai": "4.3.6",
        "electron": "19.0.4"
    },
    "scripts": {
        "start": "nodemon src/server/nodeServer.mjs",
        "watch": "nodemon --legacy-watch --exec \"npm run build\"",
        "build:client-sass": "sass --no-source-map %npm_package_config_clientAddress%sass:%npm_package_config_output%/assets/css",
        "build:editor-sass": "sass --no-source-map %npm_package_config_editorAddress%sass:%npm_package_config_output%/assets/css/",
        "copy:assets": "copyfiles -u 2 ./src/shared/assets/**/* %npm_package_config_output%",
        "copy:index": "copyfiles -u 2 %npm_package_config_clientAddress%index.html %npm_package_config_output%",
        "copy": "npm-run-all --parallel copy:*",
        "webpack": "webpack",
        "build": "npm-run-all webpack copy build:* start",
        "test": "mocha",
        "buildApp": "electron ."
    }
}
