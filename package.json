{
    "name": "adventure",
    "version": "0.0.1",
    "description": "adventure",
    "main": "public/",
    "author": "Ghilea",
    "config": {
        "clientAddress": "./src/client/",
        "clientOutput": "./public",
        "editorAddress": "./src/devTool/",
        "editorOutput": "./editor"
    },
    "dependencies": {
        "howler": "2.2.3",
        "use-sound": "4.0.1",
        "rooks": "5.11.2",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "three": "0.140.2",
        "@react-three/fiber": "8.0.19",
        "@react-three/drei": "9.11.3",
        "@react-three/cannon": "6.3.0",
        "zustand": "4.0.0-rc.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.17.10",
        "@babel/core": "^7.18.0",
        "@babel/preset-env": "^7.18.0",
        "@babel/preset-react": "^7.17.12",
        "@babel/plugin-transform-runtime": "^7.18.0",
        "babel-loader": "^8.2.5",
        "body-parser": "1.20.0",
        "copyfiles": "^2.4.1",
        "cors": "2.8.5",
        "dotenv": "^16.0.1",
        "express": "4.18.1",
        "mysql": "2.18.1",
        "nodemon": "^2.0.16",
        "npm-run-all": "^4.1.5",
        "sass": "^1.52.1",
        "webpack": "^5.72.1",
        "webpack-cli": "^4.9.2",
        "ws": "^8.6.0",
        "pkg": "5.7.0",
        "gltf-pipeline": "3.0.4"
    },
    "scripts": {
        "start": "nodemon src/server/nodeServer.mjs",
        "watch": "nodemon --exec \"npm run build\"",
        "build:client-sass": "sass --no-source-map %npm_package_config_clientAddress%sass:%npm_package_config_clientOutput%/css",
        "copy:client-assets": "copyfiles -u 2 ./src/shared/assets/**/* %npm_package_config_clientOutput%",
        "copy:client-index": "copyfiles -u 2 %npm_package_config_clientAddress%index.html %npm_package_config_clientOutput%",
        "build:editor-sass": "sass --no-source-map %npm_package_config_editorAddress%sass:%npm_package_config_editorOutput%/css",
        "copy:editor-assets": "copyfiles -u 2 ./src/shared/assets/**/* %npm_package_config_editorOutput%",
        "copy:editor-index": "copyfiles -u 2 %npm_package_config_editorAddress%index.html %npm_package_config_editorOutput%",
        "copy": "npm-run-all --parallel copy:*",
        "webpack": "webpack",
        "build": "npm-run-all webpack copy build:* start"
    },
    "nodemonConfig": {
        "watch": [
            "./src/*"
        ],
        "ext": "js,mjs,cjs,scss,html",
        "ignore": [
            "public/*",
            "editor/*"
        ],
        "delay": 2500
    }
}
