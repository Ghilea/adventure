{
    "name": "adventure",
    "version": "0.0.1",
    "description": "adventure",
    "main": "public/",
    "author": "Ghilea",
    "config": {
        "address": "./src/",
        "output": "./public"
    },
    "dependencies": {
        "howler": "2.2.3",
        "use-sound": "4.0.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.17.10",
        "@babel/core": "^7.17.10",
        "@babel/preset-env": "^7.17.10",
        "@babel/preset-react": "^7.16.7",
        "@babel/plugin-transform-runtime": "^7.17.10",
        "@react-three/drei": "9.6.0",
        "babel-loader": "^8.2.5",
        "body-parser": "1.20.0",
        "copyfiles": "^2.4.1",
        "cors": "2.8.5",
        "dotenv": "^16.0.0",
        "express": "4.18.1",
        "mysql": "2.18.1",
        "nodemon": "^2.0.16",
        "npm-run-all": "^4.1.5",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "@react-three/fiber": "8.0.14",
        "rooks": "5.11.0",
        "sass": "^1.51.0",
        "@react-three/cannon": "6.3.0",
        "webpack": "^5.72.0",
        "webpack-cli": "^4.9.2",
        "ws": "^8.5.0",
        "three": "0.140.0"
    },
    "scripts": {
        "start": "nodemon src/server/nodeServer.mjs",
        "watch": "nodemon --exec \"npm run build\"",
        "build:sass": "sass --no-source-map %npm_package_config_address%sass:%npm_package_config_output%/css",
        "copy:assets": "copyfiles -u 1 %npm_package_config_address%assets/**/* %npm_package_config_output%",
        "copy:index": "copyfiles -u 1 %npm_package_config_address%index.html %npm_package_config_output%",
        "copy": "npm-run-all --parallel copy:*",
        "webpack": "webpack",
        "build": "npm-run-all webpack copy build:* start"
    },
    "nodemonConfig": {
        "watch": [
            "./src/*"
        ],
        "ext": "js,mjs,cjs,scss,html,jsx",
        "ignore": [
            "public/*"
        ],
        "delay": 2500
    }
}
