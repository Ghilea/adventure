{
    "name": "adventure",
    "version": "0.0.1",
    "description": "adventure",
    "main": "public/",
    "author": "Ghilea",
    "config": {
      "address": "./src/",
      "output": "./public"
    },
    "devDependencies": {
        "mysql": "2.18.1",
        "express": "4.17.3",
        "sass": "^1.49.9",
        "npm-run-all": "^4.1.5",
        "nodemon": "^2.0.15",
        "copyfiles": "^2.4.1",
        "open-props": "^1.3.9"
    },
    "scripts": {
        "start": "nodemon src/server/app.js",
        "watch": "nodemon --exec \"npm run build\"",
        "build:sass": "sass --no-source-map %npm_package_config_address%sass:%npm_package_config_output%/css",
        "copy:assets": "copyfiles -u 1 %npm_package_config_address%assets/**/* %npm_package_config_output%",
        "copy:js": "copyfiles -u 1 %npm_package_config_address%js/**/* %npm_package_config_output%",
        "copy:index": "copyfiles -u 1 %npm_package_config_address%index.html %npm_package_config_output%",
        "copy": "npm-run-all --parallel copy:*",
        "build": "npm-run-all copy build:* start"
    },
    "nodemonConfig": {
        "watch": ["./src/*"],
        "ext": "js,scss,html", 
        "ignore": ["public/*"],
        "delay": 2500
    }
}
